<div class="page-header">
  <h3>Friend #<%= @friend.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Date</dt>
      <dd><%= @friend.date %></dd>

      <dt>Email</dt>
      <dd><%= @friend.email %></dd>

      <dt>User</dt>
      <dd><%= @friend.user_id %></dd>

      <dt>Birthday</dt>
      <dd><%= @friend.birthday %></dd>

      <dt>Friend name</dt>
      <dd><%= @friend.friend_name %></dd>

      <dt>Email subject</dt>
      <dd><%= @friend.email_subject %></dd>

      <dt>Email body</dt>
      <dd><%= @friend.email_body %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/friends" class="btn btn-primary">
        Back
      </a>
      <a href="/friends/<%= @friend.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_friend/<%= @friend.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
