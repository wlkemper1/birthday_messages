<div class="page-header">
  <h1>
    Friends
    <a href="/friends/new" class="btn btn-lg btn-success">New Friend</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date</th>
        <th>Email</th>
        <th>User</th>
        <th>Birthday</th>
        <th>Friend name</th>
        <th>Email subject</th>
        <th>Email body</th>
        <th>Actions</th>
      </tr>

      <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.date %></td>
        <td><%= friend.email %></td>
        <td><%= friend.user_id %></td>
        <td><%= friend.birthday %></td>
        <td><%= friend.friend_name %></td>
        <td><%= friend.email_subject %></td>
        <td><%= friend.email_body %></td>
        <td>
          <a href="/friends/<%= friend.id %>" class="btn btn-primary">Show</a>
          <a href="/friends/<%= friend.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_friend/<%= friend.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
